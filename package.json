{
  "name": "@hr-element/workspace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter @hr-element/play dev",
    "story": "pnpm --filter @hr-element/play storybook",
    "docs:dev": "pnpm --filter @hr-element/docs dev",
    "docs:build": "pnpm --filter @hr-element/docs build",
    "test": "run-s test-utils test-hooks test-comp",
    "test-comp": "cross-env NODE_ENV=test pnpm --filter @hr-element/components test",
    "test-utils": "cross-env NODE_ENV=test pnpm --filter @hr-element/utils test",
    "test-hooks": "cross-env NODE_ENV=test pnpm --filter @hr-element/hooks test",
    "build": "run-s build-hooks build-comp",
    "build-comp": "cross-env NODE_ENV=production pnpm --filter hr-lee-element build",
    "build-hooks": "cross-env NODE_ENV=production pnpm --filter @hr-element/hooks build",
    "build:dev": "cross-env NODE_ENV=development pnpm --filter hr-lee-element build:watch",
    "changed": "dotenv lerna version --conventional-commits --create-release github --yes",
    "changed:patch": "dotenv lerna version patch --conventional-commits --create-release github --yes",
    "changed:major": "dotenv lerna version major --conventional-commits --create-release github --yes",
    "release": "lerna publish from-package --yes"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@lerna-lite/cli": "^3.9.1",
    "@lerna-lite/publish": "^3.9.1",
    "@lerna-lite/version": "^3.9.1",
    "@popperjs/core": "^2.11.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.16.5",
    "@types/shelljs": "^0.8.15",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vue/tsconfig": "^0.5.1",
    "async-validator": "^4.2.5",
    "concurrently": "^8.2.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "npm-run-all": "^4.1.5",
    "postcss-color-mix": "^1.1.0",
    "postcss-each": "^1.1.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.2.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "rollup": "^4.22.2",
    "shelljs": "^0.8.5",
    "typescript": "^5.6.2",
    "vite": "^5.4.7",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.1.6",
    "vue3-i18n": "^1.1.5"
  },
  "dependencies": {
    "@hr-element/hooks": "workspace:*",
    "@hr-element/locale": "workspace:*",
    "@hr-element/theme": "workspace:*",
    "@hr-element/utils": "workspace:*",
    "@hr-element/vite-plugins": "workspace:*",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/test-utils": "^2.4.6",
    "hr-lee-element": "workspace:*",
    "jsdom": "^24.1.3",
    "lodash-es": "^4.17.21",
    "vue": "^3.5.7"
  }
}
